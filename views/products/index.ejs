<div class="d-flex justify-content-between align-items-center">
    <h1>Products</h1>
    <a href="/products/new" class="btn p-1 btn-primary"> Add Product</a>
</div>
<div class="table-responsive">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Purchase</th>
      <th>Sale</th>
      <th>Qty</th>
      <th>Batch</th>
      <th>Vendor</th>
      <th>Actions</th>
    </tr>
  </thead>
  <% products.forEach(product => { %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.purchase_price %></td>
      <td><%= product.sale_price %></td>
      <td><%= product.quantity %></td>
      <td><%= product.batch %></td>
      <td><%= product.vendor_name %></td>
      <td>
        <div class="d-flex align-items-center gap-2">
          <a href="/products/<%= product.id %>" class="btn p-1 btn-info">
            <i class="fa fa-eye"></i>
          </a>
          <a href="/products/<%= product.id %>/edit" class="btn p-1 btn-warning">
            <i class="fa fa-edit"></i>
          </a>
          <form action="/products/<%= product.id %>/delete?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this product?');">
            <button class="btn p-1 btn-danger" type="submit">
              <i class="fa fa-trash"></i>
            </button>
          </form>
        </div>
      </td>
    </tr>
  <% }) %>
</table>
</div>
