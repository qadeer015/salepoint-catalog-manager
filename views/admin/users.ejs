<div class="d-flex justify-content-between align-items-center">
    <h1>Users</h1>
    <a href="/admin/users/" class="btn p-1 btn-primary"> Add Product</a>
</div>
<div class="table-responsive">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>User Name</th>
      <th>Company / Shop Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <% users.forEach(user => { %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.company_name || 'NIL' %></td>
      <td><%= user.email %></td>
      <td>
        <div class="d-flex align-items-center gap-2">
          <a href="/admin/users/<%= user.id %>" class="btn p-1 btn-info">
            <i class="fa fa-eye"></i>
          </a>
          <form action="/admin/users/<%= user.id %>/delete?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this product?');">
            <button class="btn p-1 btn-danger" type="submit">
              <i class="fa fa-trash"></i>
            </button>
          </form>
        </div>
      </td>
    </tr>
  <% }) %>
</table>
</div>
