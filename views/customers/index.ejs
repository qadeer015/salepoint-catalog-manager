<div class="d-flex justify-content-between align-items-center">
    <h1>Customers</h1>
    <a href="/customers/new" class="btn p-1 btn-primary"> Add Customer</a>
</div>
<div class="table-responsive">
<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Phone</th>
    <th>CNIC</th>
    <th>Email</th>
    <th>Address</th>
    <th>Actions</th>
  </tr>
  </thead>
  <% customers.forEach(customer => { %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= customer.name %></td>
      <td><%= customer.phone %></td>
      <td><%= customer.cnic_number %></td>
      <td><%= customer.email %></td>
      <td><%= customer.address %></td>
      <td>
        <div class="d-flex align-items-center gap-2">
          <a href="/customers/<%= customer.id %>/edit" class="btn p-1 btn-info">Edit</a>
          <form action="/customers/<%= customer.id %>/delete?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this customer?');">
            <button class="btn p-1 btn-danger" type="submit">Delete</button>
          </form>
        </div>
      </td>
    </tr>
  <% }) %>
</table>
</div>
